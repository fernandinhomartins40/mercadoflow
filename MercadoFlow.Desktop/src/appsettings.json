{
  "AppSettings": {
    "ApplicationName": "MercadoFlow Desktop Collector",
    "Version": "1.0.0",
    "AutoStart": false,
    "AutoUpdate": true,
    "UpdateCheckInterval": "24:00:00"
  },
  "ApiSettings": {
    "BaseUrl": "https://api.mercadoflow.com",
    "IngestEndpoint": "/api/v1/ingest/invoice",
    "BatchEndpoint": "/api/v1/ingest/batch",
    "HealthCheckEndpoint": "/api/v1/health",
    "Timeout": "00:05:00",
    "RetryAttempts": 5,
    "RetryDelays": [ "00:00:01", "00:00:02", "00:00:04", "00:00:08", "00:00:16" ],
    "EnableCompression": true,
    "UserAgent": "MercadoFlow-Desktop/1.0.0"
  },
  "MonitoringSettings": {
    "WatchedFolders": [
      "C:\\PDV\\XMLs",
      "C:\\NFe\\Saida"
    ],
    "FilePatterns": [ "*.xml", "*.zip" ],
    "ExcludePatterns": [ "*.tmp", "*.temp", "*~*" ],
    "DebounceDelayMs": 2000,
    "MaxFileSizeMB": 50,
    "ProcessSubfolders": true,
    "DeleteAfterProcessing": false,
    "MoveToProcessedFolder": true,
    "ProcessedFolderPath": "C:\\PDV\\Processados"
  },
  "DatabaseSettings": {
    "ConnectionString": "Data Source=Data/mercadoflow.db;Cache=Shared",
    "CommandTimeout": 30,
    "EnableSensitiveDataLogging": false,
    "MaxRetryAttempts": 3,
    "RetryDelayMs": 1000
  },
  "SecuritySettings": {
    "ValidateCertificates": true,
    "RequireHttps": true,
    "EncryptLocalData": true,
    "ValidateXmlSignature": true,
    "ValidateXmlSchema": true
  },
  "LoggingSettings": {
    "LogLevel": "Information",
    "MaxLogFileSizeMB": 10,
    "MaxLogFiles": 7,
    "LogToFile": true,
    "LogToConsole": false,
    "StructuredLogging": true
  },
  "PerformanceSettings": {
    "MaxConcurrentProcessing": 5,
    "BatchSize": 100,
    "MaxQueueSize": 10000,
    "ProcessingTimeoutMs": 30000,
    "HealthCheckIntervalMs": 60000
  }
}