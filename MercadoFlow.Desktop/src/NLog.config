<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="logs/internal-nlog.txt">

  <extensions>
    <add assembly="NLog.Extensions.Logging"/>
  </extensions>

  <targets>
    <!-- Arquivo de log principal -->
    <target xsi:type="File" name="allfile"
            fileName="logs/mercadoflow-${shortdate}.log"
            layout="${longdate}|${event-properties:item=EventId:whenEmpty=0}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}"
            archiveFileName="logs/archived/mercadoflow-{#}.log"
            archiveEvery="Day"
            archiveNumbering="Rolling"
            maxArchiveFiles="7"
            maxArchiveDays="7" />

    <!-- Log específico para erros -->
    <target xsi:type="File" name="errorfile"
            fileName="logs/mercadoflow-errors-${shortdate}.log"
            layout="${longdate}|${event-properties:item=EventId:whenEmpty=0}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}"
            archiveFileName="logs/archived/mercadoflow-errors-{#}.log"
            archiveEvery="Day"
            archiveNumbering="Rolling"
            maxArchiveFiles="30"
            maxArchiveDays="30" />

    <!-- Log para processamento de arquivos -->
    <target xsi:type="File" name="processingfile"
            fileName="logs/processing-${shortdate}.log"
            layout="${longdate}|${level:uppercase=true}|${logger}|${message}"
            archiveFileName="logs/archived/processing-{#}.log"
            archiveEvery="Day"
            archiveNumbering="Rolling"
            maxArchiveFiles="7"
            maxArchiveDays="7" />

    <!-- Log estruturado em JSON -->
    <target xsi:type="File" name="jsonfile"
            fileName="logs/mercadoflow-structured-${shortdate}.json">
      <layout xsi:type="JsonLayout" includeAllProperties="true">
        <attribute name="timestamp" layout="${longdate}" />
        <attribute name="level" layout="${level:upperCase=true}" />
        <attribute name="logger" layout="${logger}" />
        <attribute name="message" layout="${message}" />
        <attribute name="exception" layout="${exception:format=tostring}" />
        <attribute name="machineName" layout="${machinename}" />
        <attribute name="processId" layout="${processid}" />
        <attribute name="threadId" layout="${threadid}" />
      </layout>
    </target>

    <!-- Console para debug (opcional) -->
    <target xsi:type="Console" name="lifetimeConsole"
            layout="${level:truncate=4:lowercase=true}\: ${logger}[0]${newline}      ${message}${exception:format=tostring}" />
  </targets>

  <rules>
    <!-- Logs de processamento de arquivos -->
    <logger name="MercadoFlow.Desktop.Services.FileProcessingService" minlevel="Debug" writeTo="processingfile" final="false" />
    <logger name="MercadoFlow.Desktop.Parsers.*" minlevel="Debug" writeTo="processingfile" final="false" />

    <!-- Logs de erro para arquivo específico -->
    <logger name="*" minlevel="Error" writeTo="errorfile" />

    <!-- Todos os logs para arquivo principal -->
    <logger name="*" minlevel="Info" writeTo="allfile" />

    <!-- Logs estruturados -->
    <logger name="*" minlevel="Info" writeTo="jsonfile" />

    <!-- Microsoft logs com nível mais alto -->
    <logger name="Microsoft.*" maxlevel="Info" final="true" />
    <logger name="System.Net.Http.*" maxlevel="Info" final="true" />

    <!-- Console apenas para debug -->
    <logger name="*" minlevel="Debug" writeTo="lifetimeConsole" final="false" />
  </rules>
</nlog>