# MercadoFlow Environment Variables

# Application
APP_NAME=MercadoFlow Intelligence
APP_VERSION=1.0.0
NODE_ENV=production

# Application Ports
PORT=3001
FRONTEND_PORT=3000
NGINX_PORT=3300

# Database
DATABASE_URL=file:/app/data/mercadoflow.db

# JWT & Security
# Generate with: openssl rand -hex 32
JWT_SECRET=your_super_secure_jwt_secret_key_change_this_in_production_minimum_32_chars
JWT_EXPIRES_IN=7d

# Redis
REDIS_URL=redis://redis:6379

# CORS
CORS_ORIGIN=https://mercadoflow.com,https://www.mercadoflow.com

# Frontend
REACT_APP_API_BASE_URL=https://mercadoflow.com/api
REACT_APP_ENVIRONMENT=production

# Monitoring (Optional)
GRAFANA_PASSWORD=admin123

# SSL/TLS
SSL_CERT_PATH=/etc/nginx/ssl/mercadoflow.crt
SSL_KEY_PATH=/etc/nginx/ssl/mercadoflow.key

# Email (Production) - Optional
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@mercadoflow.com

# File Upload
MAX_FILE_SIZE=50MB
UPLOAD_PATH=/app/uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Analytics
ANALYTICS_BATCH_SIZE=1000
MARKET_BASKET_MIN_SUPPORT=0.01
MARKET_BASKET_MIN_CONFIDENCE=0.5

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Health Check
HEALTH_CHECK_TIMEOUT=30000

# Container Resource Limits
CONTAINER_MEMORY_LIMIT=2g
CONTAINER_CPU_LIMIT=2

# Build Configuration
BUILD_TIMESTAMP=

# Backup Configuration (Optional)
AWS_S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# Development overrides (for docker-compose.override.yml)
# NODE_ENV=development
# REACT_APP_API_BASE_URL=http://localhost:3000
# CORS_ORIGIN=http://localhost:3001,http://localhost:3000
# LOG_LEVEL=debug