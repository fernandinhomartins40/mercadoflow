# MercadoFlow Environment Variables

# Application
APP_NAME=MercadoFlow Intelligence
APP_VERSION=1.0.0
NODE_ENV=production

# Database
DATABASE_URL=file:./data/mercadoflow.db

# JWT & Security
JWT_SECRET=your_super_secure_jwt_secret_key_change_this_in_production_minimum_32_chars
JWT_EXPIRES_IN=7d

# Redis
REDIS_URL=redis://redis:6379

# CORS
CORS_ORIGIN=https://mercadoflow.com,https://www.mercadoflow.com

# Frontend
REACT_APP_API_BASE_URL=https://api.mercadoflow.com
REACT_APP_ENVIRONMENT=production

# Monitoring (Optional)
GRAFANA_PASSWORD=admin123

# SSL/TLS
SSL_CERT_PATH=/etc/nginx/ssl/mercadoflow.crt
SSL_KEY_PATH=/etc/nginx/ssl/mercadoflow.key

# Email (Production)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=MercadoFlow <noreply@mercadoflow.com>

# File Upload
MAX_FILE_SIZE=50MB
UPLOAD_PATH=/app/uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Analytics
ANALYTICS_BATCH_SIZE=1000
MARKET_BASKET_MIN_SUPPORT=0.01
MARKET_BASKET_MIN_CONFIDENCE=0.5

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Health Check
HEALTH_CHECK_TIMEOUT=30000

# Development overrides (for docker-compose.override.yml)
# NODE_ENV=development
# REACT_APP_API_BASE_URL=http://localhost:3000
# CORS_ORIGIN=http://localhost:3001,http://localhost:3000
# LOG_LEVEL=debug