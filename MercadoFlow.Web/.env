# MercadoFlow Environment Variables

# Application
APP_NAME=MercadoFlow Intelligence
APP_VERSION=1.0.0
NODE_ENV=development

# Database
DATABASE_URL=file:./data/mercadoflow.db

# JWT & Security
JWT_SECRET=development_jwt_secret_key_for_local_testing_only_change_in_production_32_chars
JWT_EXPIRES_IN=7d

# Redis
REDIS_URL=redis://redis:6379

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost

# Frontend
REACT_APP_API_BASE_URL=http://localhost:3000
REACT_APP_ENVIRONMENT=development

# Monitoring (Optional)
GRAFANA_PASSWORD=admin123

# SSL/TLS
SSL_CERT_PATH=/etc/nginx/ssl/mercadoflow.crt
SSL_KEY_PATH=/etc/nginx/ssl/mercadoflow.key

# Email (Development)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=MercadoFlow <noreply@mercadoflow.com>

# File Upload
MAX_FILE_SIZE=50MB
UPLOAD_PATH=/app/uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Analytics
ANALYTICS_BATCH_SIZE=1000
MARKET_BASKET_MIN_SUPPORT=0.01
MARKET_BASKET_MIN_CONFIDENCE=0.5

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Health Check
HEALTH_CHECK_TIMEOUT=30000