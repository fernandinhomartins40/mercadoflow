# Environment Configuration
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL="file:./data/mercadoflow.db"

# JWT & Security
JWT_SECRET=your_super_secure_jwt_secret_key_change_this_in_production
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

# CORS
CORS_ORIGIN=http://localhost:3001,https://app.mercadoflow.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM="MercadoFlow <noreply@mercadoflow.com>"

# File Upload
MAX_FILE_SIZE=50MB
UPLOAD_PATH=./uploads

# Analytics
ANALYTICS_BATCH_SIZE=1000
MARKET_BASKET_MIN_SUPPORT=0.01
MARKET_BASKET_MIN_CONFIDENCE=0.5

# Monitoring
LOG_LEVEL=info
LOG_FORMAT=json

# API Keys (for external integrations)
EXTERNAL_API_KEY=
WEBHOOK_SECRET=

# Application
APP_NAME="MercadoFlow Intelligence"
APP_VERSION=1.0.0
APP_URL=https://api.mercadoflow.com

# Health Check
HEALTH_CHECK_TIMEOUT=30000